<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarFilter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="?attr/colorPrimary">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/inputSearchOfList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:textColor="@color/colorText"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_8sdp"
                android:drawableLeft="@drawable/ic_search_white"
                android:textSize="@dimen/normal_text"
                android:layout_toLeftOf="@+id/backۤListWithSearchBtn"
                android:layout_toStartOf="@+id/backۤListWithSearchBtn" />

            <Button
                android:id="@+id/backۤListWithSearchBtn"
                android:layout_width="@dimen/header_button"
                android:layout_height="@dimen/header_button"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginRight="@dimen/_11sdp"
                android:background="@drawable/ic_arrow_forward"
                android:foreground="@drawable/ripple" />

        </RelativeLayout>

    </android.support.v7.widget.Toolbar>

    <TextView
        android:id="@+id/listWithSearchTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_margin="@dimen/_8sdp"
        android:textColor="@color/colorText"
        android:textSize="@dimen/normal_text"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/listWithSearchList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layoutDirection="rtl" />

</LinearLayout>